<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile"
            />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_toEndOf="@id/ivUser"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="Salil Kapor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tvDate"
            android:layout_toEndOf="@id/ivUser"
            android:layout_below="@id/tvUserName"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="Sept 30, 2023"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            >

            <RatingBar
                android:id="@+id/tvUsers"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150+ People Used"
                android:rating="3.5"
                android:textSize="13sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvReview"
            android:layout_toEndOf="@id/ivUser"
            android:layout_below="@id/tvDate"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:text="Good job. Polite and knowledgeable"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <RelativeLayout
            android:id="@+id/rlBorder"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_toEndOf="@id/ivUser"
            android:layout_below="@id/tvReview"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="#ECEDED" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>